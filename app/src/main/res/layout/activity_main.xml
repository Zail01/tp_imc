<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="media.com.tp_imc.MainActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/labelPoids"
        android:text="@string/labelPoids"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:textColor="#FF0000"
        android:textStyle="bold"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:hint="en kg"
        android:id="@+id/poids"
        android:layout_below="@id/labelPoids" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/labelTaille"
        android:text="@string/labelTaille"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:textColor="#FF0000"
        android:textStyle="bold"
        android:layout_below="@+id/poids" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:id="@+id/taille"
        android:layout_below="@id/labelTaille" />
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/taille"
        android:id="@+id/group">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/radio1"
            android:text="@string/radioMetre"/>
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/radio2"
            android:text="@string/radioCentimetre"/>
    </RadioGroup>
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkbox"
        android:text="@string/checkbox"
        android:layout_below="@id/group"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/calcul"
        android:text="@string/calculButton"
        android:layout_below="@+id/checkbox"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/raz"
        android:text="@string/raz"
        android:layout_below="@id/calcul"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/resultat"
        android:text="@string/resultat"
        android:layout_below="@id/raz"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/informations"
        android:text="@string/informations"
        android:layout_below="@+id/resultat"/>
</RelativeLayout>
